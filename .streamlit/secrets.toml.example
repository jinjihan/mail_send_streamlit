# SMTP 설정
[smtp]
host = "smtp.gmail.com"
port = 587
user = "your-email@gmail.com"
password = "your-app-password"

# 발신자 정보
[sender]
name = "발신자 이름"
email = "sender@example.com"

# 운영자 정보 (테스트용)
[admin]
email = "admin@example.com"

# 사용자 인증 정보
# 비밀번호는 SHA-256 해시로 저장
# Python에서 해시 생성: import hashlib; hashlib.sha256("your_password".encode()).hexdigest()
[users]
username = "sha256_hashed_password_here"

